.b_blog
  padding-top: 72px
  padding-bottom: 88px
  background-color #fff

.blog__list
  display: flex
  justify-content space-between
  padding-bottom: 70px

.blog__item
  width: 32%
  height: 238px
  background: #F6F9FD
  box-shadow: 0 15px 45px 0 rgba(23, 128, 224, 0.21)
