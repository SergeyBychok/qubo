    padding-top: 10px

.showBlock
  .gear_svg
    transform-origin: 36.5px 37.5px;
    opacity 0
    animation: svgRot 1s forwards
    transform: rotate(360deg);
    &.second
      transform-origin: -0.5px 28.5px
  .gear_svg-point
    opacity 0
    animation: opacity 1s 1s forwards

@keyframes svgRot {
  0% {
    opacity 0;
  }
  20% {
    opacity 1
    transform: rotate(360deg);
  }
  100% {
    opacity 1
    transform rotate(0deg)
  }
}

.open-menu
  .menu__list
    width: 100vw
    height: 100vh
    display: block
    background-color #0465C2
    z-index 9998
    position: fixed
    top: 0
    left: 0
    padding-top: 20px
    box-sizing border-box
  .menu__item
    display: block
  .menu__link
    font-size: 34px;
    color: rgba(255, 255, 255, 1.00);
    line-height: 55.5px;
  .mob__open-menu--link
    position: fixed
    z-index 9999
    right: 10px
    top: 20px
  .mob__open-menu
    transform rotate(45deg)
    transition all .5s
    &:before
      transform rotate(-90deg)
      top: 0
      transition all .5s
    &:after
      display: none

.chat-animate
  animation: showBlock .3s forwards

.chat-animate--hide
  animation: hideBlock .3s forwards

@keyframes hideBlock {
  from {
    opacity: 1;
    transform translateY(0px);
    max-height 100px;
  }

  to {
    opacity: 0;
    transform translateY(-30px);
    max-height 0;

  }
}