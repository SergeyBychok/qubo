html, body
  width: 100%
  height: 100%
  min-height 600px

body
  background-image url("../images/main-bg.jpg")
  background-size 100% auto

.content
  width: 1180px
  width: 980px
  margin: 0 auto
  font-family 'Lato', sans-serif

.section__title
  padding-bottom: 55px
  color: #046FD7
  font-size: 36px
  line-height: 44px
  text-align: center
  font-weight: normal

.btn-wrap
  display: block
  text-align center

header
  position: fixed
  width: 100%
  height: 60px
  padding-top: 22px
  z-index 10
  .content
    display: flex
    justify-content space-between
  &.bg
    background-image url("../images/bg.jpg")
    background-size cover
    .header-logo
      opacity 1
      transition all .3s

.header-logo
  width: 100px;
  height: 38px;
  margin-top: -13px;
  opacity 0

.menu__link
  font-weight: lighter
  font-size: 16px;
  color: #F2F2F2;
  line-height: 23px;
  margin-left: 46px

.menu__item
  display: inline

.b_main
  text-align center
  background-color #046fd7
  background-image url("../images/bg.jpg")
  background-repeat: no-repeat
  background-position: left top
  background-size cover
  padding-top: 113px
  padding-bottom: 60px
  color: #fff
  position: relative
  &:after
    width: 100%
    height: 580px
    display: block
    background-color #00eaf8
    content: ''
    position: absolute
    bottom 0px
    background: linear-gradient(-6deg, #fff 50%, transparent 50%);

.mail__logo
  padding-bottom: 26px
  opacity 0
  animation: opacity .4s .1s forwards
  position: relative
  z-index 5


.main__title
  color: #FFFFFF
  font-size: 80px
  font-weight: 300
  line-height: 103px
  padding-bottom: 22px
  opacity 0
  animation: opacity .4s .5s forwards
.main__text
  color: #FFFFFF
  font-size: 18px
  line-height: 28px
  max-width 700px
  padding-bottom: 70px
  margin 0 auto
  opacity 0
  animation: opacity .4s .7s forwards
.chat__wrap
  width: 595px;
  margin: 0 auto;
  position: relative;
  z-index: 3;
  text-align: left;
  padding-right: 70px;
  height: 144px

.chat__item--qubo
  display: flex

.chat__text
  background: #FFFFFF
  border-radius: 28.51px
  font-size: 19.01px
  color: #151C1B
  letter-spacing: -0.41px
  position: relative
  display: flex
  align-items center
  padding: 0 20px
  margin-left: 20px
  margin-top: 8px
  box-shadow: 0 14px 14px 0 rgba(0, 0, 0, 0.19);
  &:before
    position: absolute
    left: -12px;
    bottom: -19px;
    width: 31px;
    height: 41px;
    background-image url("../images/quote.png")
    background-size contain
    background-position top left
    background-repeat no-repeat
    display: block
    content: ''

.chat__pic
  animation: float .8s 2

.chat__item--user
  max-width: 190px
  background: #81BDF7
  border-radius: 30px 30px 20px 30px
  font-size: 19.01px
  color: #FFFFFF
  letter-spacing: -0.41px
  padding: 19px 14px
  float right
  position: relative
  margin-top: 6px
  box-shadow: 0 14px 14px 0 rgba(197, 226, 255, 1);
  animation: opacity .1s 2.2s forwards
  opacity 0
  min-height: 61px
  &:before
    position: absolute
    right: -17px;
    bottom: -19px;
    width: 36px;
    height: 44px;
    background-image url("../images/quote-blue.png")
    background-size contain
    background-position top left
    background-repeat no-repeat
    display: block
    content: ''

@keyframes opacity {
  0% {
    opacity 0
  }
  100% {
    opacity 1
  }
}

@keyframes float {
  0% {
    transform rotate(0deg)
  }
  25% {
    transform rotate(-5deg)
  }
  75% {
    transform rotate(5deg)
  }
  100% {
    transform rotate(0deg)
  }
}

@keyframes moveYoga {
  0% {
    transform: translate3D(0px, 0px, 0);
  }
  25% {
    transform: translate3D(-10px, 10px, -20px);
  }
  75% {
    transform: translate3D(10px, 5px, 0);
  }
  100% {
    transform: translate3D(0px, 0px, 0);
  }
}

.main__video-block
  width: 856px
  height: 181px
  margin: 0 auto
  position: relative
  top: -14px
  background-image url("../images/phone.png")
  background-size contain
  background-position center
  padding-top: 30px
  box-sizing border-box
  z-index 2

.main__video-link
  border: 1px solid #046FD7
  border-radius: 115.2px
  height: 71px
  width: 81px
  text-align center
  display: block
  margin: 0 auto
  animation: videoAnimate .6s 4.5s forwards
  img
    float right
    padding: 10px 14px;
    animation: videoAnimatePic .6s 4.5s forwards


@keyframes videoAnimate {
  0% {
    width: 81px
  }
  100% {
    width: 320px
  }
}

@keyframes videoAnimateText {
  0% {
    font-size: 23.04px
    opacity 0
  }
  100% {
    font-size: 23.04px
    opacity 1

  }
}


@keyframes videoAnimatePic {
  0% {
    transform rotate(0)
  }
  100% {
    transform rotate(360deg)

  }
}




.main__video-link--text
  color: #046FD7
  line-height: 26.5px
  padding-top: 24px
  display inline-block
  font-size 0
  opacity 0
  animation: videoAnimateText .6s 5.1s forwards


.b_value
  padding-top: 42px
  padding-bottom: 70px

.value__cols
  display: flex
  justify-content space-between
  padding: 0 99px 0 41px;

.value__col
  &:first-child
    width: 317px
    padding-top: 25px
    animation: moveYoga 5s linear .5s  infinite

  &:last-child
    width: 600px

.value__title
  font-size: 36px
  color: #046FD7
  padding-bottom: 22px

.value__sub-title
  font-size: 20px
  color: rgba(36, 36, 36, 0.80)
  line-height: 30px
  padding-bottom: 50px

.value__list
  display: flex
  justify-content space-between

.value__item
  width: 28%
  text-align center

.value__text
  padding-top: 17px
  font-size: 15.36px
  color: rgba(36, 36, 36, 0.80)
  line-height: 17.92px

.b_calculate
  padding-top: 90px
  padding-bottom: 86px

@import "./calculate.styl"

.tabs__control
  width: 525px
  margin: 0 auto
  border: 1px solid #046FD7
  display: flex
  border-radius 23px
  position: relative
  overflow hidden
  margin-bottom: 48px
  &:before
    border-radius 21px
    width: 50%
    height: 100%
    content: ''
    display: block
    position: absolute
    right 50%
    top: 0
    background-color #046FD7
    transition: right .3s
  &.first
    .first
      color: #ffffff
      transition color .3
  &.second
    &:before
      right: 0
      transition: right .3s
    .second
      color: #ffffff
      transition color .3

.tabs__control--item
  position: relative
  z-index 3
  height: 46px
  line-height 46px
  font-weight: lighter
  font-size: 16px;
  color: #0663A3;
  letter-spacing: 0;
  width: 50%
  text-align center
  cursor: pointer
  user-select none

.calculate__text
  font-size: 20px;
  color: rgba(36, 36, 36, 0.80);
  line-height: 30px;
  text-align center
  max-width 741px
  margin: 0 auto
  padding-bottom: 70px

.calculate__wrap
  background: #FFFFFF;
  box-shadow: 0 15px 45px 0 rgba(23, 128, 224, 0.21);
  border-radius: 41px;
  padding: 65px 49px

