.b_team
  padding-top: 75px
  padding-bottom: 92px

.team__list
  display: flex
  flex-wrap wrap
  justify-content space-between

.team__item
  width: 21%
  text-align center
  padding-bottom: 144px

.team__pic
  margin-bottom: 27px
  border-radius 100%

.team__name
  font-size: 18px
  color: #046FD7
  font-weight: bold
  padding-bottom: 10px

.team__position
  font-style italic
  font-size: 16px
  color: #677897

.team__btn
  height: 46px
  line-height 46px
  border-radius: 7px
  background-color: #046FD7
  color: #FFFFFF
  font-size: 18px
  display: inline-block
  padding: 0 60px

.b_blog
  padding-top: 72px
  padding-bottom: 88px
  background-color #fff

.blog__list
  display: flex
  justify-content space-between
  padding-bottom: 70px

.blog__item
  width: 32%
  height: 238px
  background: #F6F9FD
  box-shadow: 0 15px 45px 0 rgba(23, 128, 224, 0.21)
  border-radius: 7px
  background-image: linear-gradient(-45deg, #102397 0%, #187ADF 55%, #00EAF8 100%)

.blog__btn
  background-color: #FFFFFF
  border-radius: 100px
  font-weight: lighter
  font-size: 16px
  color: #0663A3
  border: 1px solid #0663A3
  height: 46px
  line-height 46px
  display: inline-block
  padding: 0 60px
  &:hover
    transition all .3s
    color: #fff
    background-color #0663A3

footer
  padding-top: 43px
  padding-bottom: 52px
  background-color #F8FAFD

.footer__cols
  display: flex
  justify-content space-between
  align-items flex-end

.footer__col--big
  display: flex

.footer__menu
  padding-left: 117px

.footer__menu-link
  font-size: 16px
  color: #7887A7
  line-height: 26px
  &--primary
    color: #B1BBCE

.footer__logo
  align-self: flex-end

.soc__link--fb:hover
  g
    fill #3B5998
    transition all .3s

canvas
  display: block;
  vertical-align: bottom;
  position: absolute
  top: 0


.showBlock
  transform translateY(60px);
  opacity: 0;
  animation: showBlock .3s forwards


@keyframes showBlock {
  0% {
    opacity: 0;
    transform translateY(30px);
  }
  100% {
    opacity: 1;
    transform translateY(0px);
  }
}

