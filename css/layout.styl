    color: #B1BBCE

.footer__logo
  align-self: flex-end

.soc__link--fb:hover
  g
    fill #3B5998
    transition all .3s

canvas
  display: block;
  vertical-align: bottom;
  position: absolute
  top: 0

.showBlock
  transform translateY(60px);
  opacity: 0;
  animation: showBlock .3s forwards

@keyframes showBlock {
  0% {
    opacity: 0;
    transform translateY(30px);
  }
  100% {
    opacity: 1;
    transform translateY(0px);
  }
}

.modal__video
  display: none

body.open-modal
  overflow hidden
  .modal__video
    width: 100vw
    height: 100vh
    position: fixed
    top: 0
    left: 0
    background-color rgba(15, 46, 107, 0.56)
    z-index 9999999
    display: flex
    justify-content center
    align-items center
    overflow-y scroll

.b_breadcrumbs
  display: none

