
.b_blog
  padding-top: 72px
  padding-bottom: 88px
  background-color #fff

.blog__list
  display: flex
  justify-content space-between
  padding-bottom: 70px

.blog__item
  width: 32%
  height: 238px
  background: #F6F9FD
  box-shadow: 0 15px 45px 0 rgba(23, 128, 224, 0.21)
  border-radius: 7px
  background-image: linear-gradient(-45deg, #102397 0%, #187ADF 55%, #00EAF8 100%)

.blog__btn
  background-color: #FFFFFF
  border-radius: 100px
  font-weight: lighter
  font-size: 16px
  color: #0663A3
  border: 1px solid #0663A3
  height: 46px
  line-height 46px
  display: inline-block
  padding: 0 60px
  &:hover
    transition all .3s
    color: #fff
    background-color #0663A3
