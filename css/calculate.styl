.nice-select
  width: 100%
.list
  width: 100%
.nice-select:after
  width: 0;
  height: 0;
  border-bottom: 0
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-top: 10px solid #046FD7;
  transform: rotate(0)
.nice-select.open:after
  transform: rotate(-180deg);

